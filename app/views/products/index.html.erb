<section class="product-index">
  <h2>Product List</h2>

  <% if user_signed_in? && current_user.admin? %>
    <div>
      <%= link_to 'Cadastrar Produto', new_product_path %>
    </div>
  <% end %>

  <% @products.each do |p| %>
    <div class="card">
      <% if p.image.attached? %>
        <p>
          <%= image_tag url_for(p.image), width: 250, height: 250 %>
        </p>
      <% end %>
      <p><%= link_to p.name, p %></p>
      <p>R$ <%= number_with_precision(p.price, precision: 2) %></p>
      <%= link_to 'Add to Cart', class: 'btn-action-func' %>
    </div>
  <% end %>

  <% if @products.empty? %>
    <p>Nenhum produto cadastrado</p>
  <% end %>
</section>