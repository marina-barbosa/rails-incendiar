<!DOCTYPE html>
<html>
  <head>
    <title>Incendiar Store</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'fogo.png' %>
    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li>
            <%= link_to root_path do %>
              <h1>Incendiar</h1>
            <% end %>
          </li>
          <li>
            <% if user_signed_in? %>
              <%= link_to current_user.email, user_path(current_user) %>
            <% end %>
          </li>
          <li>Pesquisar</li>

          <% if user_signed_in? %>
            <li><%= link_to "Cart", cart_items_path %></li>
            <li><%= button_to "Sair", destroy_user_session_path, class: "btn-gradient", method: :delete %></li>
          <% else %>
            <li><%= link_to "Entrar", new_user_session_path %></li>
          <% end %>

          <li><%= link_to "Criar uma conta", new_user_registration_path %></li>
        </ul>
      </nav>
    </header>
    <main>
      <div>
        <%= alert %>
        <%= notice %>
      </div>
      <%= yield %>
    </main>
  </body>
</html>
